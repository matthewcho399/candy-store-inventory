<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Candy Store</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" href="/images/candy-logo.png" type="image/png" />
  </head>
  <body>
    <%- include('../navbar') %>
    <div class="details-body">
      <div class="details-container">
        <h3 class="details-title"><%= candyDetails.name%></h3>
        <img src="<%= candyDetails.image_url %>" class="details-image" />
        <p class="details-label">Type(s):</p>
        <ul class="details-types-container">
          <% candyDetails.types.forEach(type => { %>
          <li class="details-type-item">
            <p><%= type %></p>
          </li>
          <% }); %>
        </ul>
        <p class="details-info">
          Company: <span class="details-value"><%= candyDetails.company%></span>
        </p>
        <p class="details-info">
          Quantity:
          <span class="details-value"><%= candyDetails.quantity%></span>
        </p>
        <p class="details-info">
          Price: $<span class="details-value"><%= candyDetails.price%></span>
        </p>
        <div class="buttons-container">
          <form action="/candies/update/<%=candyDetails.id%>">
            <input type="submit" value="Update" class="button update-button" />
          </form>
          <form action="/candies/delete/<%=candyDetails.id%>">
            <input type="submit" value="Delete" class="button delete-button" />
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
