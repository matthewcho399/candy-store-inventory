<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Candy Store</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" href="/images/candy-logo.png" type="image/png" />
  </head>
  <body>
    <%- include('../navbar') %>
    <div class="types-body">
      <div class="types-container">
        <div class="types-header-container">
          <p class="types-header">Types</p>
          <a href="/types/create" class="create-type-link">Create Type</a>
        </div>

        <% if (types) {%> <% types.forEach(type => { %>
        <div class="type-item">
          <a href="/types/<%= type.type %>" class="type-link">
            <h3 class="type-name"><%= type.type%></h3>
          </a>
        </div>
        <% }); %> <% } %>
      </div>
    </div>
  </body>
</html>
